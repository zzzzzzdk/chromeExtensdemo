{
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "short_name": "NB",
  "version": "1.0.2.5",
  "browser_action": {
    "default_icon": "static/nooboxLogos/icon_128x128.png",
    "default_title": "一键联查",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "static/nooboxLogos/icon_128x128.png"
  },
  "web_accessible_resources": ["searchResult.html"],
  "background": {
    "scripts": [
      "thirdParty/jquery.min.js",
      "thirdParty/fileSavor.js",
      "thirdParty/jszip.min.js",
      "thirdParty/dayjs.min.js",
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": [
        "thirdParty/html2canvas.min.js",
        "thirdParty/jquery.min.js",
        "js/automation.js",
        "js/videoControl.js",
        "js/extractImages.js",
        "js/iframe.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "sandbox": {
    "pages": ["sandbox.html"]
  },
  "default_locale": "en",
  "permissions": [
    "tabs",
    "contextMenus",
    "storage",
    "activeTab",
    "notifications",
    "cookies",
    "scripting",
    "webRequest",
    "webRequestBlocking",
    "debugger",
    "downloads",
    "fileSystem",
    "fileSystem.write",
    "nativeMessaging",
    "webNavigation",
    "http://*/*",
    "https://*/*",
    "<all_urls>",
    "pageCapture"
  ],
  "minimum_chrome_version": "35",
  "content_security_policy": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'",
  "native_manifests": {
    "com.yisa.nativeapp": "nativeapp.json"
  }
}
